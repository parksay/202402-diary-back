<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kr.happyjob.study.repository.contents.ContentsMapper">
	
   	<!-- 공지사항 목록 조회 -->
	<select id = "contentsList" parameterType="java.util.Map" resultType = "kr.happyjob.study.vo.contents.ContentsModel">
        /*kr.happyjob.study.repository.contents.ContentsMapper.contentsList*/
	SELECT
    	 	  c.title as title
    		 ,c.contents as contents
    		 ,c.contents_seq 
		 FROM Diary1.tb_userinfo u
	LEFT JOIN Diary1.tb_folder f ON u.member_seq = f.member_seq
	LEFT JOIN Diary1.tb_contents c ON c.folder_seq = f.folder_seq
	</select>
	
		
	<!-- 공지사항 목록 총 갯수 조회 -->
	<select id="contentsCnt" parameterType="java.util.Map"  resultType="int">
		/*kr.happyjob.study.repository.contents.ContentsMapper.contentsCnt*/
		SELECT COUNT(*)
		FROM Diary1.tb_contents

	</select>	
		
	
	
